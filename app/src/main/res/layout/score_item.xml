<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:layout_margin="4dp"
    android:elevation="8dp"
    app:cardElevation="8dp"
    >

    <RelativeLayout
        android:id="@+id/score_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/score_IMG_poster"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@id/score_LBL_score"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/astronaut_1" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/score_LBL_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="6dp"
            android:layout_toEndOf="@id/score_IMG_poster"
            android:maxLines="1"
            android:minLines="1"
            android:text="score"
            android:textSize="24sp"
            android:textStyle="bold" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/score_LBL_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/score_LBL_title"
            android:layout_alignStart="@id/score_LBL_title"
            android:layout_marginTop="8dp"
            android:maxLines="1"
            android:minLines="1"
            android:text="000"
            android:textSize="20sp" />



    </RelativeLayout>
</androidx.cardview.widget.CardView>